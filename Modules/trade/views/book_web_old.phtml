        } else {
            var volumeV = parseFloat(volume);
            var cotacaoV = parseFloat(cotacao);            
            var taxa = <?php echo number_format($taxaVenda, $casasDecimais, ".", "") ?>;
            
            var fee = (volumeV * taxa) / 100;            
