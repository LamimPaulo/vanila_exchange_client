                try {
                    if (json.sucesso) {
                        $("#comissao-reais").html("R$ " + json.reais);
                        $("#comissao-btc").html("BTC " + json.btc);
                        $("#extrato").html(json.html);
                    } else {
                        showNotyAlert(json.mensagem, "e");
                        $("#extrato").html("");
                    }
                } catch (e) {
                    showNotyAlert(e, "e");
                    $("#extrato").html("");
                }
                $("#loading").hide();
            }
        });

    }
