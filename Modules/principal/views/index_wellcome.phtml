    function render(props) {
        return function(tok, i) {
          return (i % 2) ? props[tok] : tok;
        };
      }

    function listarMinhasMoedas() {
        $.ajax({
            url: '<?php echo URLBASE_CLIENT . \Utils\Rotas::R_DASHBOARD_MINHASMOEDAS_NOVO ?>',
            method: 'post',
            dataType:'json',
            success: function (json) {
                try {
